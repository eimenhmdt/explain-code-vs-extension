{
  "name": "explain-code",
  "publisher": "eimenhmdt",
  "displayName": "Explain Code",
  "description": "Minimalistic extension that uses AI to explain code snippets and files to you",
  "icon": "icons/cat.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/eimenhmdt/explain-code-vs-extension"
  },
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "explain-code.explainCode",
        "title": "Explain Code"
      },
      {
        "command": "explain-code.explainSelectedCode",
        "title": "Explain Selected Code"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "explain-code.explainSelectedCode",
          "when": "editorTextFocus && editorHasSelection",
          "group": "other"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "properties": {
        "openaiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for Explain Code Extension"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "axios": "^1.7.7"
  }
}
